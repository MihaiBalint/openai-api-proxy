    "jose": "^5.9.3",
    "jsonrepair": "^3.13.1",
    "lodash-es": "^4.17.21",
    "mime": "^4.1.0",
    "openai": "^5.0.1",
    "serialize-error": "^11.0.3",
    "zod": "^3.23.8"
